# Server Configuration
PORT=4000

# Database
MONGODB_URI=mongodb://localhost:27017/your_database_name        // or online

# JWT Tokens
ACCESS_TOKEN_SECRET=your_access_token_secret_here
ACCESS_TOKEN_EXPIRY=1d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRY=10d

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (Nodemailer)
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password

# Google Gemini AI (Optional)
GEMINI_API_KEY=your_gemini_api_key

# Face Recognition Service Configuration
FACE_SERVICE_URL=http://localhost:5000
FACE_SERVICE_TIMEOUT=30000
FACE_SIMILARITY_THRESHOLD=0.2  # Similarity score threshold (0.55 = dlib distance ~0.6)
FACE_SEARCH_TOP_N=10

# CORS
CORS_ORIGIN=http://localhost:3000
